                ('cuda91/fft/%(version)s', EXTERNAL_MODULE)]

# Provide means for linker to find the cuda stub libraries.
# This is important for systems which do not have cuda-driver package installed
modextrapaths = {
    'LIBRARY_PATH': ["lib64/stubs"],
    }

moduleclass = 'system'

