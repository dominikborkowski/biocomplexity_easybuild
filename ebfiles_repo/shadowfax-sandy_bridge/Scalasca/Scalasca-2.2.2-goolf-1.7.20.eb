    '2bafce988b0522d18072f7771e491ab9',    # scalasca-2.2.2.tar.gz
]

dependencies = [
    ('Cube', '4.3.2'),
    ('OTF2', '1.5.1'),
]

sanity_check_paths = {
    'files': ["bin/scalasca", ("lib64/libpearl.replay.a", "lib/libpearl.replay.a")],
    'dirs': [],
}

moduleclass = 'perf'

