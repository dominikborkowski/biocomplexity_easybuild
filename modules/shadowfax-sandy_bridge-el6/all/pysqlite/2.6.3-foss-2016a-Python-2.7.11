    module load SQLite/3.9.2-foss-2016a
}

setenv	EBROOTPYSQLITE		"$root"
setenv	EBVERSIONPYSQLITE		"2.6.3"
setenv	EBDEVELPYSQLITE		"$root/easybuild/pysqlite-2.6.3-foss-2016a-Python-2.7.11-easybuild-devel"

