#%Module
proc ModulesHelp { } {
    puts stderr {

Description
===========
Fontconfig is a library designed to provide system-wide font configuration,
 customization and application access.


More information
================
 - Homepage: http://www.freedesktop.org/software/fontconfig
    }
}

module-whatis {Description: 
 Fontconfig is a library designed to provide system-wide font configuration,
 customization and application access.
}
module-whatis {Homepage: http://www.freedesktop.org/software/fontconfig}

set root /apps/easybuild/software/haswell-haswell/fontconfig/2.12.6-GCCcore-6.4.0

conflict fontconfig

if { ![ is-loaded GCCcore/6.4.0 ] } {
    module load GCCcore/6.4.0
}

if { ![ is-loaded expat/2.2.5-GCCcore-6.4.0 ] } {
    module load expat/2.2.5-GCCcore-6.4.0
}

if { ![ is-loaded freetype/2.9-GCCcore-6.4.0 ] } {
    module load freetype/2.9-GCCcore-6.4.0
}

prepend-path	CPATH		$root/include
prepend-path	LD_LIBRARY_PATH		$root/lib
prepend-path	LIBRARY_PATH		$root/lib
prepend-path	PATH		$root/bin
prepend-path	PKG_CONFIG_PATH		$root/lib/pkgconfig
setenv	EBROOTFONTCONFIG		"$root"
setenv	EBVERSIONFONTCONFIG		"2.12.6"
setenv	EBDEVELFONTCONFIG		"$root/easybuild/fontconfig-2.12.6-GCCcore-6.4.0-easybuild-devel"

# Built with EasyBuild version 3.6.0
