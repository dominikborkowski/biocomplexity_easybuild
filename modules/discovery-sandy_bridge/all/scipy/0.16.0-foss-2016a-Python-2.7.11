#%Module
proc ModulesHelp { } {
    puts stderr {

Description
===========
SciPy is a collection of mathematical algorithms and convenience
 functions built on the Numpy extension for Python.


More information
================
 - Homepage: http://www.scipy.org
    }
}

module-whatis {Description: SciPy is a collection of mathematical algorithms and convenience
 functions built on the Numpy extension for Python.}
module-whatis {Homepage: http://www.scipy.org}

set root /apps/easybuild/software/discovery-sandy_bridge/scipy/0.16.0-foss-2016a-Python-2.7.11

conflict scipy

if { ![ is-loaded foss/2016a ] } {
    module load foss/2016a
}

if { ![ is-loaded numpy/1.9.2-foss-2016a-Python-2.7.11 ] } {
    module load numpy/1.9.2-foss-2016a-Python-2.7.11
}

setenv	EBROOTSCIPY		"$root"
setenv	EBVERSIONSCIPY		"0.16.0"
setenv	EBDEVELSCIPY		"$root/easybuild/scipy-0.16.0-foss-2016a-Python-2.7.11-easybuild-devel"

prepend-path	PYTHONPATH		$root/lib/python2.7/site-packages
