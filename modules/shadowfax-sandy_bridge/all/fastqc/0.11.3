#%Module
proc ModulesHelp { } {
    puts stderr { A set of tools (in Java) for working with next generation sequencing data in the BAM format. - Homepage: http://www.bioinformatics.babraham.ac.uk/projects/fastqc/
    }
}

module-whatis {Description: A set of tools (in Java) for working with next generation sequencing data in the BAM format. - Homepage: http://www.bioinformatics.babraham.ac.uk/projects/fastqc/}

set root /apps/easybuild/software/shadowfax-sandy_bridge/fastqc/0.11.3

conflict fastqc

if { ![ is-loaded Java/1.7.0_80 ] } {
    module load Java/1.7.0_80
}

prepend-path	CLASSPATH		$root/cisd-jhdf5.jar
prepend-path	CLASSPATH		$root/jbzip2-0.9.jar
prepend-path	CLASSPATH		$root/sam-1.103.jar
setenv	EBROOTFASTQC		"$root"
setenv	EBVERSIONFASTQC		"0.11.3"
setenv	EBDEVELFASTQC		"$root/easybuild/fastqc-0.11.3-easybuild-devel"

prepend-path	PATH		$root
prepend-path	PATH		$root
setenv	JAVA_HOME		"/apps/easybuild/software/shadowfax-sandy_bridge/fastqc/0.11.3"
