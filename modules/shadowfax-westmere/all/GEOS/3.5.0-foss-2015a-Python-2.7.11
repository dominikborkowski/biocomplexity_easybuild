#%Module
proc ModulesHelp { } {
    puts stderr { GEOS (Geometry Engine - Open Source) is a C++ port of the  Java Topology Suite (JTS) - Homepage: http://trac.osgeo.org/geos
    }
}

module-whatis {Description: GEOS (Geometry Engine - Open Source) is a C++ port of the  Java Topology Suite (JTS) - Homepage: http://trac.osgeo.org/geos}

set root /apps/easybuild/software/shadowfax-westmere/GEOS/3.5.0-foss-2015a-Python-2.7.11

conflict GEOS

if { ![ is-loaded foss/2015a ] } {
    module load foss/2015a
}

if { ![ is-loaded Python/2.7.11-foss-2015a ] } {
    module load Python/2.7.11-foss-2015a
}

prepend-path	CPATH		$root/include
prepend-path	LD_LIBRARY_PATH		$root/lib
prepend-path	LIBRARY_PATH		$root/lib
prepend-path	PATH		$root/bin
setenv	EBROOTGEOS		"$root"
setenv	EBVERSIONGEOS		"3.5.0"
setenv	EBDEVELGEOS		"$root/easybuild/GEOS-3.5.0-foss-2015a-Python-2.7.11-easybuild-devel"

prepend-path	PYTHONPATH		$root/lib/python2.7/site-packages
