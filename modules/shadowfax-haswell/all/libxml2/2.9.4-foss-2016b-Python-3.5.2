    }
}

module-whatis {Description: Libxml2 is the XML C parser and toolchain developed for the Gnome project (but usable
 outside of the Gnome platform).}
module-whatis {Homepage: http://xmlsoft.org/}

set root /apps/easybuild/software/shadowfax-haswell/libxml2/2.9.4-foss-2016b-Python-3.5.2

conflict libxml2

if { ![ is-loaded foss/2016b ] } {
    module load foss/2016b
}

if { ![ is-loaded zlib/1.2.8-foss-2016b ] } {
    module load zlib/1.2.8-foss-2016b
}

if { ![ is-loaded XZ/5.2.2-foss-2016b ] } {
    module load XZ/5.2.2-foss-2016b
}

if { ![ is-loaded Python/3.5.2-foss-2016b ] } {
    module load Python/3.5.2-foss-2016b
}

prepend-path	ACLOCAL_PATH		$root/share/aclocal
prepend-path	CPATH		$root/include
prepend-path	LD_LIBRARY_PATH		$root/lib
prepend-path	LIBRARY_PATH		$root/lib
prepend-path	MANPATH		$root/share/man
prepend-path	PATH		$root/bin
prepend-path	PKG_CONFIG_PATH		$root/lib/pkgconfig
setenv	EBROOTLIBXML2		"$root"
setenv	EBVERSIONLIBXML2		"2.9.4"
setenv	EBDEVELLIBXML2		"$root/easybuild/libxml2-2.9.4-foss-2016b-Python-3.5.2-easybuild-devel"

prepend-path	PYTHONPATH		$root/lib/python3.5/site-packages
prepend-path	CPATH		$root/include/libxml2
