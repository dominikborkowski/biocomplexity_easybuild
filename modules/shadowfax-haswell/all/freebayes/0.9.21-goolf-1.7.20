    }
}

module-whatis { Bayesian haplotype-based polymorphism discovery and genotyping.  - Homepage: https://github.com/ekg/freebayes}

set root /apps/easybuild/software/shadowfax-haswell/freebayes/0.9.21-goolf-1.7.20

conflict freebayes

if { ![ is-loaded goolf/1.7.20 ] } {
