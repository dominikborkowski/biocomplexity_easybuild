proc ModulesHelp { } {
    puts stderr { Pycairo is a set of Python bindings for the cairo graphics library. - Homepage: http://cairographics.org/pycairo/
    }
}

module-whatis {Pycairo is a set of Python bindings for the cairo graphics library. - Homepage: http://cairographics.org/pycairo/}

set root /apps/easybuild/software/shadowfax-haswell/pycairo/1.8.10-goolf-1.7.20-Python-2.7.9

conflict pycairo

if { ![ is-loaded goolf/1.7.20 ] } {
    module load goolf/1.7.20
}

