#%Module
proc ModulesHelp { } {
    puts stderr { The numactl program allows you to run your application program on specific cpu's and memory nodes.
 It does this by supplying a NUMA memory policy to the operating system before running your program.
 The libnuma library provides convenient ways for you to add NUMA memory policies into your own program. - Homepage: http://oss.sgi.com/projects/libnuma/
    }
}

module-whatis {The numactl program allows you to run your application program on specific cpu's and memory nodes.
 It does this by supplying a NUMA memory policy to the operating system before running your program.
 The libnuma library provides convenient ways for you to add NUMA memory policies into your own program. - Homepage: http://oss.sgi.com/projects/libnuma/}

set root /apps/easybuild/software/shadowfax-haswell/numactl/2.0.10-GCC-4.8.4

conflict numactl

if { ![ is-loaded GCC/4.8.4 ] } {
    module load GCC/4.8.4
}

prepend-path	CPATH		$root/include
prepend-path	LD_LIBRARY_PATH		$root/lib
prepend-path	LIBRARY_PATH		$root/lib
prepend-path	MANPATH		$root/share/man
prepend-path	PATH		$root/bin
setenv	EBROOTNUMACTL		"$root"
setenv	EBVERSIONNUMACTL		"2.0.10"
setenv	EBDEVELNUMACTL		"$root/easybuild/numactl-2.0.10-GCC-4.8.4-easybuild-devel"

