#%Module
proc ModulesHelp { } {
    puts stderr {

Description
===========
Pycairo is a set of Python bindings for the cairo graphics library.


More information
================
 - Homepage: http://cairographics.org/pycairo/
    }
}

module-whatis {Description: Pycairo is a set of Python bindings for the cairo graphics library.}
module-whatis {Homepage: http://cairographics.org/pycairo/}

set root /apps/easybuild/software/orion-broadwell/pycairo/1.8.10-foss-2016a-Python-2.7.11

conflict pycairo

if { ![ is-loaded foss/2016a ] } {
    module load foss/2016a
}

if { ![ is-loaded Python/2.7.11-foss-2016a ] } {
    module load Python/2.7.11-foss-2016a
}

if { ![ is-loaded cairo/1.14.2-foss-2016a ] } {
    module load cairo/1.14.2-foss-2016a
}

prepend-path	CPATH		$root/include
prepend-path	PKG_CONFIG_PATH		$root/lib/pkgconfig
setenv	EBROOTPYCAIRO		"$root"
setenv	EBVERSIONPYCAIRO		"1.8.10"
setenv	EBDEVELPYCAIRO		"$root/easybuild/pycairo-1.8.10-foss-2016a-Python-2.7.11-easybuild-devel"

prepend-path	PYTHONPATH		$root/lib/python2.7/site-packages
