#%Module
proc ModulesHelp { } {
    puts stderr {

Description
===========
Automake: GNU Standards-compliant Makefile generator


More information
================
 - Homepage: http://www.gnu.org/software/automake/automake.html
    }
}

module-whatis {Description: Automake: GNU Standards-compliant Makefile generator}
module-whatis {Homepage: http://www.gnu.org/software/automake/automake.html}

set root /apps/easybuild/software/orion-broadwell/Automake/1.15-GCCcore-6.3.0

conflict Automake

if { ![ is-loaded GCCcore/6.3.0 ] } {
    module load GCCcore/6.3.0
}

if { ![ is-loaded Autoconf/2.69-GCCcore-6.3.0 ] } {
    module load Autoconf/2.69-GCCcore-6.3.0
}

prepend-path	ACLOCAL_PATH		$root/share/aclocal
prepend-path	MANPATH		$root/share/man
prepend-path	PATH		$root/bin
setenv	EBROOTAUTOMAKE		"$root"
setenv	EBVERSIONAUTOMAKE		"1.15"
setenv	EBDEVELAUTOMAKE		"$root/easybuild/Automake-1.15-GCCcore-6.3.0-easybuild-devel"

