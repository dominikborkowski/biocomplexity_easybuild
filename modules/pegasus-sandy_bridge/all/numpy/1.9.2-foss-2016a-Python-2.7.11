set root /apps/easybuild/software/pegasus-sandy_bridge/numpy/1.9.2-foss-2016a-Python-2.7.11

conflict numpy

if { ![ is-loaded foss/2016a ] } {
    module load foss/2016a
}

if { ![ is-loaded Python/2.7.11-foss-2016a ] } {
    module load Python/2.7.11-foss-2016a
}

if { ![ is-loaded SuiteSparse/4.4.5-foss-2016a-METIS-5.1.0 ] } {
    module load SuiteSparse/4.4.5-foss-2016a-METIS-5.1.0
}

prepend-path	PATH		$root/bin
setenv	EBROOTNUMPY		"$root"
setenv	EBVERSIONNUMPY		"1.9.2"
setenv	EBDEVELNUMPY		"$root/easybuild/numpy-1.9.2-foss-2016a-Python-2.7.11-easybuild-devel"

prepend-path	PYTHONPATH		$root/lib/python2.7/site-packages
prepend-path	CPATH		$root/lib/python2.7/site-packages/numpy/core/include
prepend-path	LD_LIBRARY_PATH		$root/lib/python2.7/site-packages/numpy/core/lib
prepend-path	LIBRARY_PATH		$root/lib/python2.7/site-packages/numpy/core/lib
