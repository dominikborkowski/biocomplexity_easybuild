prepend-path	PATH		$root/bin
setenv	EBROOTMESON		"$root"
setenv	EBVERSIONMESON		"0.50.0"
setenv	EBDEVELMESON		"$root/easybuild/Meson-0.50.0-GCCcore-8.2.0-Python-3.7.2-easybuild-devel"

