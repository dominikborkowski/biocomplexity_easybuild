#%Module
proc ModulesHelp { } {
    puts stderr {

Description
===========
The Open MPI Project is an open source MPI-2 implementation.


More information
================
 - Homepage: http://www.open-mpi.org/
    }
}

module-whatis {Description: The Open MPI Project is an open source MPI-2 implementation.}
module-whatis {Homepage: http://www.open-mpi.org/}

set root /apps/easybuild/software/pegasus-sandy_bridge/OpenMPI/2.1.1-GCC-6.4.0-2.28

conflict OpenMPI

if { ![ is-loaded GCC/6.4.0-2.28 ] } {
    module load GCC/6.4.0-2.28
}

if { ![ is-loaded hwloc/1.11.7-GCCcore-6.4.0 ] } {
    module load hwloc/1.11.7-GCCcore-6.4.0
}

prepend-path	CPATH		$root/include
prepend-path	LD_LIBRARY_PATH		$root/lib
prepend-path	LIBRARY_PATH		$root/lib
prepend-path	MANPATH		$root/share/man
prepend-path	PATH		$root/bin
prepend-path	PKG_CONFIG_PATH		$root/lib/pkgconfig
setenv	EBROOTOPENMPI		"$root"
setenv	EBVERSIONOPENMPI		"2.1.1"
setenv	EBDEVELOPENMPI		"$root/easybuild/OpenMPI-2.1.1-GCC-6.4.0-2.28-easybuild-devel"

# Built with EasyBuild version 3.5.1
