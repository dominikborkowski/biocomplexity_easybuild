#%Module
proc ModulesHelp { } {
    puts stderr {

Description
===========
This bundle collect the standard GNU build tools: Autoconf, Automake and libtool


More information
================
 - Homepage: http://autotools.io
    }
}

module-whatis {Description: This bundle collect the standard GNU build tools: Autoconf, Automake and libtool}
module-whatis {Homepage: http://autotools.io}

set root /apps/easybuild/software/pegasus-sandy_bridge/Autotools/20150215

conflict Autotools

if { ![ is-loaded Autoconf/2.69 ] } {
    module load Autoconf/2.69
}

if { ![ is-loaded Automake/1.15 ] } {
    module load Automake/1.15
}

if { ![ is-loaded libtool/2.4.6 ] } {
    module load libtool/2.4.6
}

setenv	EBROOTAUTOTOOLS		"$root"
setenv	EBVERSIONAUTOTOOLS		"20150215"
setenv	EBDEVELAUTOTOOLS		"$root/easybuild/Autotools-20150215-easybuild-devel"

# Built with EasyBuild version 3.5.1
