prepend-path	MANPATH		$root/share/man
prepend-path	PATH		$root/bin
setenv	EBROOTGETTEXT		"$root"
setenv	EBVERSIONGETTEXT		"0.19.6"
setenv	EBDEVELGETTEXT		"$root/easybuild/gettext-0.19.6-foss-2016a-easybuild-devel"

