set root /apps/easybuild/software/pegasus-sandy_bridge/gettext/0.19.6-foss-2016a

conflict gettext

if { ![ is-loaded foss/2016a ] } {
    module load foss/2016a
}

prepend-path	ACLOCAL_PATH		$root/share/aclocal
prepend-path	CPATH		$root/include
