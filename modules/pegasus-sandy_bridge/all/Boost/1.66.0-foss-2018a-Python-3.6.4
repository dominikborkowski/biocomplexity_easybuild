module-whatis {Description: Boost provides free peer-reviewed portable C++ source libraries.}
module-whatis {Homepage: http://www.boost.org/}

set root /apps/easybuild/software/pegasus-sandy_bridge/Boost/1.66.0-foss-2018a-Python-3.6.4

conflict Boost

if { ![ is-loaded foss/2018a ] } {
    module load foss/2018a
}

if { ![ is-loaded bzip2/1.0.6-GCCcore-6.4.0 ] } {
    module load bzip2/1.0.6-GCCcore-6.4.0
}

if { ![ is-loaded zlib/1.2.11-GCCcore-6.4.0 ] } {
    module load zlib/1.2.11-GCCcore-6.4.0
}

if { ![ is-loaded Python/3.6.4-foss-2018a ] } {
    module load Python/3.6.4-foss-2018a
}

prepend-path	CPATH		$root/include
prepend-path	LD_LIBRARY_PATH		$root/lib
prepend-path	LIBRARY_PATH		$root/lib
setenv	EBROOTBOOST		"$root"
setenv	EBVERSIONBOOST		"1.66.0"
setenv	EBDEVELBOOST		"$root/easybuild/Boost-1.66.0-foss-2018a-Python-3.6.4-easybuild-devel"

setenv	BOOST_ROOT		"/apps/easybuild/software/pegasus-sandy_bridge/Boost/1.66.0-foss-2018a-Python-3.6.4"
